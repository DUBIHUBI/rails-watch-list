
<div class="container">
    <h1 class="my-4 text-center">Watch List</h1>
    <div class="grid-container m-4">
        <% @lists.each do |list| %>
          <div class="card-category" style="background-image: url('https://image.tmdb.org/t/p/w500/rCzpDGLbOoPwLjy3OAm5NUPOTrC.jpg');">
            <%= link_to list.name, list_path(list) %>
          </div>
        <% end %>
    </div>
    <%= link_to "Create a new list", new_list_path, class: "btn btn-primary" %>
</div>
